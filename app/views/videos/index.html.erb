<%= render 'videos/main-visual' %>
<%= render 'layouts/nav' %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>動画を投稿</h2>
        <%= render 'form', video: @video %>
    </div>
    <div class="col-md-9">
      <h2>動画一覧</h2>
      <table class="table table-inverse">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>コメント</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @videos.each do |video| %>
            <tr>
              <td>
                <%= video.title %>
              </td>
              <td>
                <%= video.body %>
              </td>
              <td>
                <iframe width="350" height="250" src="https://www.youtube.com/embed/<%= video.youtube %>" frameborder="0" allowfullscreen></iframe>
              </td>
               <td>
                 <%= link_to 'Destroy', video_path(video), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_video_#{video.id}"%>
               </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>