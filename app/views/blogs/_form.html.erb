<%= form_with model:blog, local:true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title, class: 'form-control blog_title' %>
  </div>
  <div class="form-group">
    <%= f.label :本文 %>
    <%= f.text_area :body, class: 'form-control blog_body' %>
  </div>

  <div class="form-group">
    <%= f.label :記入者 %>
    <%= f.text_field :name, class: 'form-control blog_name' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
